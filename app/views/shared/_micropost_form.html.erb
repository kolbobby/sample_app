<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.text_area :content, :placeholder => "Compose post...", :style => "height:100px;" %>
	</div>
	<%= f.submit "Post", :class => "btn btn-large btn-primary", :style => "width:100%;" %>
<% end %>