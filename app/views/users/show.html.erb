<% provide(:title, @user.name) %>
<div class="center hero-unit">
	<div class="row">
		<aside class="span3">
			<section>
				<h3>
					<%= gravatar_for @user %>
					<%= @user.name %>
				</h3>
				<%= @user.email %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
		</aside>
		<div class="span7" style="text-align:left;">
			<%= render 'follow_form' if signed_in? %>
			<h4>Microposts (
				<% @count = 0 %>
				<% @user.microposts.each do |m| %>
				<% if !m.priv? %>
				<% @count = @count + 1 %>
				<% end %>
				<% end %>
				<%= @count %>
			)</h4>
			<% if @user.microposts.any? %>
				<ol class="microposts">
					<%= render @microposts %>
				</ol>
				<%= will_paginate @microposts %>
			<% end %>
		</div>
	</div>
</div>