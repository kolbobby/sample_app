<% provide(:title, 'Sign Up') %>
<div class="center hero-unit">
	<h1>Sign Up</h1>
	<div class="row">
		<div class="span6 offset2">
			<%= form_for(@user) do |f| %>
				<%= render 'fields', :f => f %>
				<%= f.submit "Create My Account", :class => "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
</div>